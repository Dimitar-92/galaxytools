<tool id="fornac" name="Generate an image" version="0.1.0">
  <description>for RNA sequences in a file</description>
  <command interpreter="python">
      <![CDATA[
              fornac.py $output
      ]]>
  </command>
  <inputs action="http://localhost:8080/fornac/editor.html" check_values="false" method="GET">
      <param name="GALAXY_URL" type="baseurl" value="/tool_runner" />
      <param name="URL" type="hidden" value="http://localhost:8080/fornac/editor.html" />
      <param name="tool_id" type="hidden" value="fornac" />
  </inputs>
  <request_param_translation>
      <request_param galaxy_name="URL_method" remote_name="URL_method" missing="post" />
      <request_param galaxy_name="URL" remote_name="URL" missing="" />
      <request_param galaxy_name="galaxyData" remote_name="galaxyData" missing="?" />
      <request_param galaxy_name="data_type" remote_name="data_type" missing="txt" />
      <request_param galaxy_name="output_label" remote_name="data_type" missing="txt" >
          <value_translation>
              <value galaxy_value="Molecule" remote_value="sdf" />
              <value galaxy_value="SMILES" remote_value="smi" />
          </value_translation>
      </request_param>
  </request_param_translation>
  <uihints minwidth="800"/>
  <outputs>
      <data name="output" format="smi" label='imported ${output_label} file'>
          <change_format>
              <when input="output_label" value="SMILES" format="smi"/>
          </change_format>
      </data>
  </outputs>
  <options sanitize="False" refresh="True"/>
  <help>
This tool displays a secondary structure on the web.
  </help>

</tool>